<div class="article-detail">
  <h2><%= @article.title %></h2>
  <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
  <iframe src="https://www.facebook.com/plugins/share_button.php?href=https%3A%2F%2Fkatsuobushi.herokuapp.comhttps%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&layout=button_count&size=small&appId=364848003846332&width=69&height=20" width="69" height="20" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allow="encrypted-media"></iframe>
  <section><%= @article.text.html_safe %></section>
  <h4>最近投稿された記事</h4>
  <ul class="recent-article-list">
  <% @recent_list.each do |recent| %>
  <li><%= link_to "#{recent.title}", article_path("#{recent.id}") %></li><br>
  <% end %>
  <ul>
</div>
